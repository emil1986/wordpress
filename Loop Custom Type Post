 <?php 
              query_posts(array( 
                  'post_type' => 'ofertas',
                  'showposts' => 3 
              ) );  
          ?>
          <?php while (have_posts()) : the_post(); ?>
                  <div class="col-xs-12  col-sm-6  col-md-4 ofer">
                  <a href="<?php the_permalink() ?>"><?php the_post_thumbnail('medium'); ?></a>



                  </div>

          <?php endwhile;?>
